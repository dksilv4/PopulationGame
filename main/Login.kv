<FlatButton@ButtonBehavior+Label>


<SignInWindow>
    id: loginWin
    orientation: 'vertical'
    spacing: 10
    space_x: self.size[0]/3
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "../images/galaxy.jpg"


    BoxLayout:
        orientation: 'vertical'
        padding: loginWin.space_x, 10
        Label:
            id: sp
        Label:
            id: info
            text: ''
            markup: True
            size_hint_y: None
            height:50
        BoxLayout:
            orientation: 'vertical'
            spacing:10
            size_hint_y: None
            height: 100
            TextInput:
                id: usernameField
                hint_text: 'Username'
                multiline: False
                focus: True
                on_text_validate: pwdField.focus = True
                background_color: (0,0,0,.4)
                border: (0,0,0,0)
                foreground_color: (1,1,1,1)
                hint_text_color: (1,1,1,.5)
            TextInput:
                id: pwdField
                hint_text: 'Password'
                multiline: False
                password: True
                on_text_validate: root.validateUser()
                background_color: (0,0,0,.3)
                border: (0,0,0,0)
                foreground_color: (1,1,1,1)
                hint_text_color: (1,1,1,.5)


        # Login/ Register Button
        BoxLayout:
            size_hint_y: None

            Button:#Login Button
                size_hint_y: None
                height: 50
                size_hint_x: None
                width: 167
                text: 'Sign In'
                background_color: (1,.1,.1,.3)
                background_normal: ''
                on_press: root.test()
            Label:
                id:sp1
            Button:#Register Button
                size_hint_y: None
                size_hint_x: None
                height: 50
                width: 162
                text: 'Register'
                background_color: (1,.1,.1,.2)
                background_normal: ''
                on_press: root.switchToRegister()

        Label:
            id: sp
            size_hint_y:1



