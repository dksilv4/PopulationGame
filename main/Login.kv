<FlatButton@ButtonBehavior+Label>


<SignInWindow>
    id: loginWin
    orientation: 'vertical'
    spacing: 10
    space_x: self.size[0]/3
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "../images/galaxy.jpg"



    BoxLayout:
        size_hint_y: None
        height: 40
        Label:
            text: ' Login'
            size_hint_x:0.95
        FlatButton:
            size_hint_x: 0.04
            on_press: root.exit()
            Image:
                source: '../images/close.png'
                y: self.parent.y
                x: self.parent.x
                size: 40, 40
                allow_stretch: True
                color: (1,1,1,0.5)


    BoxLayout:
        orientation: 'vertical'
        padding: loginWin.space_x, 10
        Label:
            id: sp
        Label:
            id: info
            text: ''
            markup: True
            size_hint_y: None
            height:50
        BoxLayout:
            orientation: 'vertical'
            spacing:10
            size_hint_y: None
            height: 100
            TextInput:
                id: usernameField
                hint_text: 'Username'
                multiline: False
                focus: True
                on_text_validate: pwdField.focus = True
                background_color: (0,0,0,.4)
                border: (0,0,0,0)
                foreground_color: (1,1,1,1)
                hint_text_color: (1,1,1,.5)
            TextInput:
                id: pwdField
                hint_text: 'Password'
                multiline: False
                password: True
                on_text_validate: root.validateUser()
                background_color: (0,0,0,.3)
                border: (0,0,0,0)
                foreground_color: (1,1,1,1)
                hint_text_color: (1,1,1,.5)


        # Login/ Register Button
        BoxLayout:
            size_hint_y: None

            Button:#Login Button
                size_hint_y: None
                height: 50
                size_hint_x: None
                width: 162
                text: 'Sign In'
                background_color: (1,.1,.1,.3)
                background_normal: ''
                on_press: root.validateUser()
            Label:
                id:sp1
            Button:#Register Button
                size_hint_y: None
                size_hint_x: None
                height: 50
                width: 162
                text: 'Register'
                background_color: (1,.1,.1,.2)
                background_normal: ''
                on_press: root.switchToRegister()

        Label:
            id: sp


<RegisterWindow>
    id: registerWin
    orientation: 'vertical'
    space_x: self.size[0]/3
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "../images/galaxy.jpg"

    BoxLayout:
        size_hint_y: None
        height: 50
        Label:
            text: 'Register'
            size_hint_x: 1
        FlatButton:
            size_hint_x: 0.03
            on_press: root.exit()
            Image:
                source: '../images/close.png'
                y: self.parent.y +3
                x: self.parent.x -10
                size: 40, 40
                allow_stretch: True
                color: (1,1,1,0.5)
    Button:
        text: 'back'
        size_hint_x:0.1
        size_hint_y: None
        height:50
        background_color: (0,0,0,.5)
        on_press: root.back()

    BoxLayout:
        orientation: 'vertical'
        padding: registerWin.space_x, 10
        background_color: (1,1,0,1)
        Label:
            id: info
            text: ''
            markup: True
            size_hint_y: None
            spacing:20
        BoxLayout:
            orientation: 'vertical'
            TextInput:
                id: test
                hint_text: 'Username'
                multiline: False
                focus: True
#                on_text_validate: pwdField.focus = True
                background_color: (0,0,0,.4)
                border: (0,0,0,0)
                foreground_color: (1,1,1,1)
                hint_text_color: (1,1,1,.7)

    BoxLayout:
        size_hint_y:0.3
<Game>:
    canvas:


<DragLabel>:
    # Define the properties for the DragLabel
    drag_rectangle: self.x, self.y, self.width, self.height
    drag_timeout: 10000000
    drag_distance: 0


<Manager>:
    id: screenManager

    SignInWindow:
        id: Login
        name: "login"
        manager: screenManager

    RegisterWindow:
        id: Register
        name: "register"
        manager: screenManager

    Game:
        id: Game
        name: 'game'
        manager: screenManager